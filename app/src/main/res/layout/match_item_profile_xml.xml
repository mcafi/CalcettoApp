<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >



<TextView
android:id="@+id/match_date"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentStart="true"
android:layout_alignParentTop="true"
android:layout_marginStart="16dp"
android:layout_marginTop="16dp"
android:text="Data e ora"
android:textStyle="bold" />

    <TextView
        android:id="@+id/match_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/match_date"
        android:layout_marginStart="62dp"
        android:layout_marginTop="-19dp"
        android:layout_toEndOf="@+id/match_date"
        android:text="Partecipanti" />

    <TextView
        android:id="@+id/match_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/match_available"
        android:layout_marginStart="103dp"
        android:layout_marginTop="-15dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/match_available"
        android:text="note" />


</RelativeLayout>