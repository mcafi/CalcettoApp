<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/campo_da_calcio"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:contentDescription="@string/immagine_del_logo_del_calcetto"
        app:srcCompat="@drawable/calcetto" />

    <EditText
        android:id="@+id/et_signup_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_weight=".10"
        android:autofillHints=""
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:paddingHorizontal="10dp" />

    <EditText
        android:id="@+id/et_signup_email"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_weight=".10"
        android:autofillHints=""
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="10dp" />

    <EditText
        android:id="@+id/et_signup_username"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_weight=".10"
        android:autofillHints=""
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:paddingHorizontal="10dp" />

    <EditText
        android:id="@+id/et_signup_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_weight=".10"
        android:autofillHints=""
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingHorizontal="10dp" />

    <Button
        android:id="@+id/btn_signup_signup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_weight=".10"
        android:background="@color/colorButton"
        android:text="@string/button_signup"
        android:textColor="@color/colorTextButton" />

    <TextView
        android:id="@+id/btn_signup_login"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_weight=".10"
        android:padding="15dp"
        android:text="@string/sei_gi_registrato_accedi"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        app:autoSizeTextType="uniform" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".15" />


</LinearLayout>